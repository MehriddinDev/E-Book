<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/bg_main"
    android:layout_marginVertical="0.5dp"
    android:layout_height="120dp">

    <androidx.cardview.widget.CardView
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="14dp"
        android:layout_marginVertical="10dp"
        android:id="@+id/containerBook"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgBook"
            android:layout_width="70dp"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/txtBookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iymon"
        android:textColor="@color/text"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="40dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/txtBookAuthor"
        app:layout_constraintStart_toEndOf="@id/containerBook"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iymon"
        android:textSize="16sp"
        android:textColor="@color/gray"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/containerBook"
        app:layout_constraintTop_toBottomOf="@id/txtBookName" />

    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_margin="14dp"
        app:tint="@color/text"
        android:padding="4dp"
        android:id="@+id/btnInfo"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="@id/containerBook"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/dots2"/>


</androidx.constraintlayout.widget.ConstraintLayout>